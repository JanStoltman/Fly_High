<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/conference_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:text="10:00 - 11:00"
            android:textColor="@color/text_white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/conference_speaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/conference_time"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:textColor="@color/text_white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/conference_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/conference_speaker"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:text="Nudny wykÅ‚ad o Javie"
            android:textColor="@color/text_white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/conference_description"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/conference_name"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:text="Opis"
            android:textColor="@color/text_white"
            android:textSize="20sp" />


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/conference_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.SupportMapFragment"

            android:layout_alignParentLeft="true"
            android:layout_below="@+id/conference_localization_info"
            />

        <TextView
            android:background="@color/main_yellow"
            android:id="@+id/conference_localization_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/conference_description"

            android:gravity="center_horizontal"
            android:scrollbars="vertical"
            android:text="Dojazd"
            android:textColor="@color/text_white"
            android:textSize="20sp" />


        <ImageButton
            android:background="@color/background_main"
            android:id="@+id/conference_zoom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_white_24dp"
            android:layout_alignRight="@+id/conference_map"
            android:layout_alignParentBottom="true"/>

        <ImageButton
            android:background="@color/main_yellow"
            android:id="@+id/conference_speaker_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_face_black_24dp"
            android:layout_alignRight="@+id/conference_localization_info"
            android:layout_alignTop="@+id/conference_localization_info"
            />

    </RelativeLayout>

</LinearLayout>