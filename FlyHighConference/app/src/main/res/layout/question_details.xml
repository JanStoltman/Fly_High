        <android.support.v7.widget.RecyclerView
            android:id="@+id/question_details_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        app:layout_anchor="@id/question_details_app_bar_layout"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/question_details_socials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginBottom="5dp"
                android:id="@+id/question_details_community_facebook"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/fly_high_facebook" />

            <ImageView
                android:layout_marginBottom="5dp"
                android:id="@+id/question_details_community_twitter"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/fly_high_twitter" />

            <ImageView
                android:layout_marginBottom="5dp"
                android:id="@+id/question_details_community_tumblr"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/fly_high_tumblr" />

            <ImageView
                android:layout_marginBottom="5dp"
                android:id="@+id/question_details_community_pinterest"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/fly_high_pinterest" />

        </LinearLayout>
    </RelativeLayout>

