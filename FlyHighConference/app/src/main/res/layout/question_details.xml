<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/question_details_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/question_details_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/main_yellow"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="ImiÄ™ i nazwisko">

            <ImageView
                android:id="@+id/question_details_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/fly_high"
                app:layout_collapseMode="parallax" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="top"
                android:fitsSystemWindows="true"
                android:src="@drawable/collapsing_toolbar_top_shadow"
                app:layout_collapseMode="pin" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_gravity="bottom"
                android:src="@drawable/collapsing_toolbar_bottom_shadow" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/question_details_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/question_details_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_main"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/question_details_recycler_view"
                android:layout_width="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/question_details_app_bar_layout"
        app:layout_anchorGravity="bottom|right|end" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/question_details_socials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/question_details_community_facebook"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/fly_high_facebook" />

            <ImageView
                android:id="@+id/question_details_community_twitter"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/fly_high_twitter" />

            <ImageView
                android:id="@+id/question_details_community_tumblr"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/fly_high_tumblr" />

            <ImageView
                android:id="@+id/question_details_community_pinterest"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/fly_high_pinterest" />

        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

