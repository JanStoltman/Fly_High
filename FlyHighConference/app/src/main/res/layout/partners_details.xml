<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/partners_details_image"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside" />

    </RelativeLayout>

    <TextView
        android:id="@+id/partners_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner_yellow"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Partner"
        android:textColor="@color/background_black"
        android:textSize="30sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        android:background="@color/main_yellow"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_corner_yellow"
        android:orientation="vertical">


        <TextView
            android:id="@+id/partners_details_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Nazwa sponsora"
            android:textColor="@color/background_black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/partners_details_description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:text="opis"
            android:textColor="@color/background_black"
            android:textSize="15sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            android:background="@color/main_yellow"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/partners_details_socials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/partners_details_community_facebook"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/fly_high_facebook" />

            <ImageView
                android:id="@+id/partners_details_community_twitter"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/fly_high_twitter" />

            <ImageView
                android:id="@+id/partners_details_community_tumblr"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/fly_high_tumblr" />

            <ImageView
                android:id="@+id/partners_details_community_pinterest"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/fly_high_pinterest" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>