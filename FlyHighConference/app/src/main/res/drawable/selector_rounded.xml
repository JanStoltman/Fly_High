<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="2dp" android:color="@color/main_yellow" />

            <solid android:color="@color/background_main" />

            <padding android:bottom="2dp" android:left="3dp" android:right="2dp" android:top="2dp" />

            <corners android:radius="5dp" />
        </shape>

    </item>

    <item>

        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="2dp" android:color="@color/main_yellow" />

            <solid android:color="@color/backgroung_dark" />

            <padding android:bottom="2dp" android:left="3dp" android:right="2dp" android:top="2dp" />

            <corners android:radius="5dp" />
        </shape>

    </item>
</selector>
